
<h1>Sign Up Confirmation </h1>
<h3>Are you sure these values are correct?</h3>

<%= form_for @user do |f| %>
  <%= form_group_tag(@user.errors[:email]) do %>
    <h4>Email: <%= f.object.email %></h4>
  <% end %>
  <%= form_group_tag(@user.errors[:name]) do %>
    <h4>Name: <%= f.object.name %></h4>
  <% end %>
  <% end %><br><br>

  <div class="row">
    <div class="col-md-1">
      <%= button_to "Yes", {controller: "users", action: "create",
                          params: params}, class: 'btn btn-success'%>
    </div>
    <div class="col-md-1">
      <%= link_to "No", new_user_path, class: 'btn btn-default' %>
    </div>
  </div>


    <% if flash[:notice] %>
     <div class="alert alert-success">
       <button type="button" class="close" data-dismiss="alert">&times;</button>
       <%= flash[:notice] %>
     </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
