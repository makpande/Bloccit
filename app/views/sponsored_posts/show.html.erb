<h1><%= @sponsorepost.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @sponsorepost.body %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_topic_post_path(@sponsorepost.topic, @sponsorepost), class: 'btn btn-success' %>
     <%= link_to "Delete Post", [@sponsorepost.topic, @sponsorepost], method: :delete,
          class: 'btn btn-danger',
          data: {confirm: 'Are your sure you want to delete this post'} %>
   </div>
 </div>
