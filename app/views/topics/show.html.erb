<h1><%= @topic.name %></h1>
<% if user_is_authorized_for_topics? %>
  <div class="col-8-md">
    <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>

    <% @topic.posts.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <!-- <%= link_to post.title, post %> -->
            <%= link_to post.title, topic_post_path(@topic, post) %>
          </h4>
          <small>
             <!-- submitted <%= time_ago_in_words(post.created_at) %> ago <br> -->
             submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
             <%= post.comments.count %> Comments
           </small>
        </div>
      </div>
    <% end %>
    <% @topic.sponsored_posts.each do |sponsoredpost| %>
      <div class="media">
        <div class="media-body">
          <h5 class="media-heading">

            <%= link_to sponsoredpost.title, topic_sponsored_post_path(@topic, sponsoredpost) %>
          </h5>
        </div>
        <% end %>
      </div>
  </div>
<% if current_user %>
  <div class="col-md-8">
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <%= link_to "New SponsorPost", new_topic_sponsored_post_path(@topic), class: 'btn btn-success' %>
  </div>
<% end %>
</div>
