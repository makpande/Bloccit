<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">

    <h4><%= "Public Topics" %></h4>
    <% @public_topics.each do | topic | %>
      <div class="media">
        <div class="media-body">
          <%= render topic %>
        </div>
      </div>
    <% end %>
    <h4><%= "Private Topics" if !@private_topics.blank? %></h4>
    <% @private_topics.each do | topic | %>
      <div class="media">
        <div class="media-body">
          <%= render topic %>
        </div>
      </div>
    <% end %>
  </div>
  <% if user_is_authorized_for_topics? %>
  <div class="col-md-4">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
